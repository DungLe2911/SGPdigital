{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM", 
      "DOM.Iterable", 
      "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,   
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
